#include <stdio.h>

void convertMeters(){
 printf("Convert:");
  scanf("%f", meters);
  
 convert += meters * 0.9144;
}
void convertFeet(){
 convert += convert * 3.28084;
}
void convertInches(){
 convert += convert * 12;
}
void convertCenti(){
 convert += convert * 2.54;
}

int main(){
 float n1, n2,n3, n4, convert;
 
 convertMeters(n1);
 convertFeet(n2);
 convertInches(n3);
 convertCenti(n4);
 
 printf("\nConvert Meters to Yards: %f", n1);
 printf("\nConvert Yards to Feet: %f", n2);
 printf("\nConvert Feet to Inches: %f", n3);
 printf("\nConvert Inches to Centimeters: %f", n4);
 
